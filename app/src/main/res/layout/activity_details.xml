<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".DetailsActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_resto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:fontFamily="@font/redhatdisplay_bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"/>
            <TextView
                android:id="@+id/tv_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="categories"
                android:fontFamily="@font/redhatdisplay_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"/>
            <ImageView
                android:id="@+id/img_star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/star"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="170dp"/>
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4,5"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="175dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_fav"
                android:layout_width="60dp"
                android:layout_height="62dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                app:borderWidth="0dp"
                android:src="@drawable/ic_baseline_bookmark"
                app:tint="@color/blue" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/tv_alamat"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="10dp"
        android:editable="false"
        android:text="alamat restaurant"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:background="@drawable/detailbox"
        android:backgroundTint="@color/bluegrey"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa."
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/redhatdisplay_bold"
        android:text="Menus"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_customrv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="10dp"
        android:text="Costumer Reviews"
        android:fontFamily="@font/redhatdisplay_bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_namerv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="10dp"
        android:text="Ahmad"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_tglrv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="80dp"
        android:text="13/11/2019"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:textSize="17dp"
        android:textColor="@color/grey"/>

    <EditText
        android:id="@+id/tv_commentrv"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_marginTop="605dp"
        android:layout_marginLeft="10dp"
        android:hint="your comment"
        android:textSize="15dp"
        android:fontFamily="@font/redhatdisplay_semibold"
        android:paddingLeft="15dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:background="@drawable/detailbox"
        android:backgroundTint="@color/white"/>


</RelativeLayout>